@page
@model CengProject.Pages.Instructor.InstructorDashboardModel
@{
    ViewData["Title"] = "Instructor Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-info">Welcome, @Model.UserEmail!</h2>
        <p class="lead text-muted">This is your instructor dashboard. Manage your classes and reservations efficiently.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title fw-semibold mb-3 text-primary">
                        <i class="bi bi-speedometer2 me-2"></i> Instructor Navigation
                    </h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-journal-check me-2 text-success"></i>
                            <a asp-page="/Instructor/InstructorReservations" class="text-decoration-none text-secondary">My Reservations</a>
                        </li>
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-calendar3-week me-2 text-warning"></i>
                            <a asp-page="/Instructor/ReservationCalendar" class="text-decoration-none text-secondary">Calendar View</a>
                        </li>
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-easel2 me-2 text-info"></i>
                            <a asp-page="/Instructor/Classroom" class="text-decoration-none text-secondary">Classroom</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
