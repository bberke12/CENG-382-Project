@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary fw-bold">Welcome to the Reservation System</h1>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        <!-- Admin Features -->
        <div class="col">
            <div class="card h-100 border-2 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-success fw-semibold mb-3">
                        <i class="bi bi-shield-lock-fill me-2"></i> Admin Capabilities
                    </h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-calendar-check me-2 text-primary"></i> Manage Academic Terms
                        </li>
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-person-badge-fill me-2 text-success"></i> Handle Instructor Accounts
                        </li>
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-calendar-event-fill me-2 text-warning"></i> Approve Reservations
                        </li>
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-building-fill me-2 text-info"></i> Monitor Classrooms
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Instructor Features -->
        <div class="col">
            <div class="card h-100 border-2 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-info fw-semibold mb-3">
                        <i class="bi bi-person-fill-gear me-2"></i> Instructor Capabilities
                    </h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-pencil-square me-2 text-primary"></i> Make Reservations
                        </li>
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-calendar-range-fill me-2 text-success"></i> View Calendar (Weekly/Monthly)
                        </li>
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-chat-left-dots-fill me-2 text-warning"></i> Give Feedback
                        </li>
                        <li class="list-group-item bg-white text-secondary">
                            <i class="bi bi-eye-fill me-2 text-info"></i> Track Status
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
