@page
@model CengProject.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-dark">Welcome, Admin</h2>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">
            <a asp-page="/Admin/ManageTerm/Index" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-calendar3 display-6 text-primary me-3"></i>
                        <div>
                            <h5 class="card-title fw-semibold mb-0">Manage Term</h5>
                            <span class="stretched-link"></span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-page="/Admin/InstructorAccount/Index" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-person-badge display-6 text-success me-3"></i>
                        <div>
                            <h5 class="card-title fw-semibold mb-0">Instructor Account Manager</h5>
                            <span class="stretched-link"></span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-page="/Admin/ReservationCalender" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-calendar-event display-6 text-warning me-3"></i>
                        <div>
                            <h5 class="card-title fw-semibold mb-0">Reservation Calendar</h5>
                            <span class="stretched-link"></span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-page="/Admin/Classrooms/Index" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-building display-6 text-info me-3"></i>
                        <div>
                            <h5 class="card-title fw-semibold mb-0">Classroom List</h5>
                            <span class="stretched-link"></span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
