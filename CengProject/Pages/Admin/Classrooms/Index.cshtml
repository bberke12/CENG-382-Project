@page
@model CengProject.Pages_Admin_Classrooms.IndexModel

@{
    ViewData["Title"] = "Classroom List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-easel-fill me-2"></i> Classroom List
    </h2>

    <p>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm border rounded">
            <thead class="table-light">
                <tr class="text-secondary">
                    <th>@Html.DisplayNameFor(model => model.Classroom[0].RoomName)</th>
                    <th>@Html.DisplayNameFor(model => model.Classroom[0].Capacity)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Classroom)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RoomName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                        <td class="text-center">
                            <a asp-page="./Edit" asp-route-id="@item.ClassroomId" class="btn btn-outline-primary btn-sm me-1">
                                <i class="bi bi-pencil-fill me-1"></i> Edit
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.ClassroomId" class="btn btn-outline-info btn-sm me-1">
                                <i class="bi bi-info-circle-fill me-1"></i> Details
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.ClassroomId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash3-fill me-1"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
